<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->

        <!-- Disables the action bar application wide -->
        <item name="android:windowActionBar"> false </item>
        <!-- Disables the title bar -->
        <item name="android:windowNoTitle"> true </item>
        <!-- Custom transition animations -->
        <item name="android:windowAnimationStyle">@style/ActivityAnimations</item>
    </style>

    <!-- Global exit and enter animations of activities -->
    <style name="ActivityAnimations" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/to_game_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/to_game_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/to_game_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/to_game_exit</item>
    </style>

    <style name= "genericMenu">
        <item name="android:paddingLeft"> 16dp </item>
        <item name="android:paddingRight"> 16dp </item>
    </style>

    <style name="menuButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="countDownLook">
        <item name="android:textSize"> 150sp </item>
        <item name="android:textStyle"> bold </item>
    </style>

    <style name="scoreAnimationText">
        <item name="android:textSize"> 25sp </item>
        <item name="android:textColor">@color/score_anim_text</item>
    </style>
    <style name="scoreAnimationTextNegative" parent="scoreAnimationText">
        <item name="android:textColor">@color/score_anim_text_negative</item>
    </style>
</resources>
